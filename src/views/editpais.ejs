<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Editar País</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-800">

  <div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded shadow">
    <h1 class="text-2xl font-bold mb-6">Editar País</h1>

    <!-- Mostrar errores -->
    <% if (errores.length > 0) { %>
      <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <ul class="list-disc pl-5">
          <% errores.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form action="/api/paises/<%= pais._id %>?_method=PUT" method="POST" class="space-y-4">
      <!-- Nombre oficial -->
      <div>
        <label for="officialName" class="block font-semibold">Nombre oficial:</label>
     <input type="text" name="officialName" id="officialName"
       value="<%= pais.name.official %>"
       class="w-full border border-gray-300 rounded p-2">


      </div>

      <!-- Capital -->
      <div>
        <label for="capital" class="block font-semibold">Capital:</label>
        <input type="text" name="capital" id="capital"
               value="<%= pais.capital ? pais.capital.join(', ') : '' %>"
               class="w-full border border-gray-300 rounded p-2">
      </div>

      <!-- Fronteras -->
      <div>
        <label for="borders" class="block font-semibold">Fronteras (separadas por coma):</label>
        <input type="text" name="borders" id="borders"
               value="<%= pais.borders ? pais.borders.join(', ') : '' %>"
               class="w-full border border-gray-300 rounded p-2">
      </div>

      <!-- Área -->
      <div>
        <label for="area" class="block font-semibold">Área:</label>
        <input type="number" step="0.01" name="area" id="area"
               value="<%= pais.area || '' %>"
               class="w-full border border-gray-300 rounded p-2">
      </div>

      <!-- Población -->
      <div>
        <label for="population" class="block font-semibold">Población:</label>
        <input type="number" name="population" id="population"
               value="<%= pais.population || '' %>"
               class="w-full border border-gray-300 rounded p-2">
      </div>

      <!-- Gini -->
      <div>
        <label for="gini" class="block font-semibold">Gini:</label>
        <input type="number" step="0.01" name="gini" id="gini"
       value="<%= giniValor %>"
       class="w-full border border-gray-300 rounded p-2">

      </div>

          <!--Zonas Horarias -->
      <div>
        <label for="timezones" class="block font-semibold">Zonas Horarias (separadas por coma):</label>
        <input type="text" name="timezones" id="timezones"
               value="<%= pais.timezones ? pais.timezones.join(', ') : '' %>"
               class="w-full border border-gray-300 rounded p-2"
               placeholder="Ej: UTC−03:00, UTC−04:00">
      </div>

      <!-- Creador -->
      <div>
        <label for="creador" class="block font-semibold">Creador:</label>
        <input type="text" name="creador" id="creador"
               value="<%= pais.creador || '' %>"
               class="w-full border border-gray-300 rounded p-2">
      </div>

      <!-- Botónes -->
        <div class="flex items-center justify-between pt-4">
        <button type="submit" class="bg-orange-500 hover:bg-orange-400 text-white-900 font-bold py-2 px-4 rounded">
          Guardar Cambios
        </button>
        <a href="/api/dashboard-paises" class="ml-4 inline-block bg-orange-700 hover:bg-orange-600 text-white-300 font-bold py-2 px-4 rounded">
          Cancelar
        </a>
      </div>

    </form>
  </div>

</body>
</html>
 